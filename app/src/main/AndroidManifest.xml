<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seafooler.hospitalapp">

    <!-- sd卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InstallGameActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".PictureActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".CommonActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".VideoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".MallActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".CompActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".CheckActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>